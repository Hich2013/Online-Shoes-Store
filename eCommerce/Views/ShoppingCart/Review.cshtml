@model eCommerce.ViewModels.ShoppingCartViewModel

@{
    ViewBag.Title = "Review";
}

<h2>Review Your Order</h2>

<section>
  <table class="items">
  @foreach (var item in Model.CartItems)
  {
    <tr class="row">
        <td id="count">
            @item.Count
        </td>
        <td id="prod_img">
            <img id="product_img" src=@Url.Content(@item.Product.ProductArtUrl) />
        </td>
        <td class="description">
            @Html.ActionLink(item.Product.Title, "Details", "Store", new { id = item.ProductId }, null)
        </td>
         <td id="total_price">
            $@(item.Product.Price * item.Count)
        </td>       
    </tr>
  }
  </table>
  <hr id="first_line">
  <table class="sub_ship">
    <tr id="subttoal">
        <td class="subtotal"> Subtotal </td>
        <td id="subtotal_amnt"> $@Model.CartSubTotal</td>
    </tr>
    <tr id="shipping">
        <td class="shipping">Shipping</td>
        <td id="shipping_amnt"> - </td>
    </tr>
  </table>
  <hr id="second_line">
  <table class="total">
    <tr >
        <td id="total">Total</td>
        <td id="total_amnt">$@Model.CartSubTotal</td>
    </tr>
  </table>
    <div class="continue"><a href="/Checkout/AddressAndPayment"> Place Order </a></div>
</section>


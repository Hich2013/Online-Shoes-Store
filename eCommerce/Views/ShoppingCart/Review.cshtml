    #product_img{ width: 84%;}
    .description a { text-decoration: none; color: black;font-family: Georgia, Times, "Times New Roman", serif}
    #second_line{ width: 42.5%; margin-left: 11%;}
    .sub_ship{width:100%}
    #subttoal{padding-left:4%}
    #second_line{  margin-left: 0%; width: 100%;}
    #subtotal_amnt{    float: right;
    font-family: Georgia, Times, "Times New Roman", serif;}
    #shipping_amnt{float: right;}
    #total_amnt{ float:right;padding-left: 65%;font-family: Georgia, Times, "Times New Roman", serif}
    section{ padding-bottom: 10%;}
    .total{ width: 100%;}
    #total{padding-right:17%;font-family: Georgia, Times, "Times New Roman", serif}
    .subtotal{font-family: Georgia, Times, "Times New Roman", serif}
    .shipping{padding-top:2%; font-family: Georgia, Times, "Times New Roman", serif}
    #total_price{    font-family: Georgia, Times, "Times New Roman", serif;
    float: right;
    padding-top: 12%;}
